generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum BacsalAccountRoles {
  SUPERADMIN
  ADMIN
  STAFF
}

model BacsalAccountUsers {
  id                        Int                @id @default(autoincrement())
  firstName                 String
  middleName                String?
  lastName                  String
  username                  String             @unique
  email                     String             @unique
  password                  String
  profilePicture            String?
  role                      BacsalAccountRoles @default(STAFF)
  contactNumber             String
  birthdate                 DateTime
  address                   String
  emergencyContactPerson    String?
  emergencyContactNumber    String?
  createdAt                 DateTime           @default(now())
  updatedAt                 DateTime           @updatedAt

  @@map("bacsalaccountusers")
}